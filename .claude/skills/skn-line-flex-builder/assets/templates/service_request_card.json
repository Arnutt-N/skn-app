{
  "_comment": "SKN App: Service request status card. Use build_service_request_card() in flex_messages.py.",
  "_placeholders": {
    "req_id": "Service request ID (integer)",
    "category": "Thai topic category string",
    "status_text": "Thai status label from STATUS_MAP",
    "status_color": "Hex color from STATUS_MAP",
    "created_date": "Formatted date dd/mm/yy",
    "detail_url": "LIFF URL for request detail page"
  },
  "type": "bubble",
  "size": "kilo",
  "header": {
    "type": "box",
    "layout": "vertical",
    "backgroundColor": "#1DB446",
    "paddingAll": "md",
    "contents": [
      {
        "type": "text",
        "text": "#{{ req_id }}",
        "color": "#ffffff",
        "weight": "bold",
        "size": "sm"
      }
    ]
  },
  "body": {
    "type": "box",
    "layout": "vertical",
    "spacing": "sm",
    "paddingAll": "lg",
    "contents": [
      {
        "type": "text",
        "text": "{{ category }}",
        "weight": "bold",
        "size": "lg",
        "wrap": true,
        "color": "#333333"
      },
      {
        "type": "separator",
        "margin": "md",
        "color": "#f0f0f0"
      },
      {
        "type": "box",
        "layout": "horizontal",
        "margin": "md",
        "contents": [
          {
            "type": "text",
            "text": "สถานะ:",
            "size": "sm",
            "color": "#666666",
            "flex": 2
          },
          {
            "type": "box",
            "layout": "horizontal",
            "flex": 3,
            "contents": [
              {
                "type": "box",
                "layout": "vertical",
                "contents": [],
                "width": "6px",
                "height": "6px",
                "backgroundColor": "{{ status_color }}",
                "cornerRadius": "3px",
                "offsetTop": "5px"
              },
              {
                "type": "text",
                "text": "{{ status_text }}",
                "size": "sm",
                "color": "{{ status_color }}",
                "weight": "bold",
                "margin": "sm"
              }
            ]
          }
        ]
      },
      {
        "type": "box",
        "layout": "horizontal",
        "contents": [
          {
            "type": "text",
            "text": "วันที่ยื่น:",
            "size": "sm",
            "color": "#666666",
            "flex": 2
          },
          {
            "type": "text",
            "text": "{{ created_date }}",
            "size": "sm",
            "color": "#333333",
            "flex": 3
          }
        ]
      }
    ]
  },
  "footer": {
    "type": "box",
    "layout": "vertical",
    "contents": [
      {
        "type": "button",
        "style": "primary",
        "action": {
          "type": "uri",
          "label": "ดูรายละเอียด",
          "uri": "{{ detail_url }}"
        }
      }
    ]
  }
}
