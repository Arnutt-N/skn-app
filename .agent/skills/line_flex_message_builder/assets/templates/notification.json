{
  "type": "bubble",
  "size": "micro",
  "body": {
    "type": "box",
    "layout": "vertical",
    "contents": [
      {
        "type": "text",
        "text": "{{ title }}",
        "weight": "bold",
        "color": "{{ accent_color|default('#00B900') }}"
      },
      {
        "type": "text",
        "text": "{{ message }}",
        "size": "xs",
        "wrap": true,
        "margin": "sm"
      },
      {
        "type": "text",
        "text": "{{ timestamp }}",
        "size": "xxs",
        "color": "#999999",
        "margin": "sm",
        "align": "end"
      }
    ]
  }
}
