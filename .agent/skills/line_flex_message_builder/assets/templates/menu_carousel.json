{
  "type": "carousel",
  "contents": [
    {
      "type": "bubble",
      "size": "micro",
      "hero": {
        "type": "image",
        "url": "{{ item1_image }}",
        "size": "full",
        "aspectMode": "cover"
      },
      "body": {
        "type": "box",
        "layout": "vertical",
        "contents": [
          {
            "type": "text",
            "text": "{{ item1_title }}",
            "weight": "bold",
            "size": "sm",
            "wrap": true
          },
          {
            "type": "text",
            "text": "{{ item1_description }}",
            "size": "xs",
            "color": "#666666",
            "margin": "sm"
          }
        ]
      },
      "footer": {
        "type": "box",
        "layout": "vertical",
        "contents": [
          {
            "type": "button",
            "style": "primary",
            "height": "sm",
            "action": {
              "type": "postback",
              "label": "Select",
              "data": "action=select&item={{ item1_id }}"
            }
          }
        ]
      }
    },
    {
      "type": "bubble",
      "size": "micro",
      "hero": {
        "type": "image",
        "url": "{{ item2_image }}",
        "size": "full",
        "aspectMode": "cover"
      },
      "body": {
        "type": "box",
        "layout": "vertical",
        "contents": [
          {
            "type": "text",
            "text": "{{ item2_title }}",
            "weight": "bold",
            "size": "sm",
            "wrap": true
          },
          {
            "type": "text",
            "text": "{{ item2_description }}",
            "size": "xs",
            "color": "#666666",
            "margin": "sm"
          }
        ]
      },
      "footer": {
        "type": "box",
        "layout": "vertical",
        "contents": [
          {
            "type": "button",
            "style": "primary",
            "height": "sm",
            "action": {
              "type": "postback",
              "label": "Select",
              "data": "action=select&item={{ item2_id }}"
            }
          }
        ]
      }
    }
  ]
}
