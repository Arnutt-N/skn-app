# Helper: Generate a secret key using `openssl rand -hex 32`
SECRET_KEY=change_this_to_a_secure_random_string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ENVIRONMENT=development

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000"]

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/skn_app_db

# LINE Messaging API
LINE_CHANNEL_ACCESS_TOKEN=
LINE_CHANNEL_SECRET=

# LINE Login
LINE_LOGIN_CHANNEL_ID=

# Redis
REDIS_URL=redis://localhost:6379/0

# Base URL used for media links
SERVER_BASE_URL=http://localhost:8000

# Seed admin helper
ADMIN_DEFAULT_PASSWORD=change_this_for_dev

# SLA thresholds
SLA_MAX_FRT_SECONDS=120
SLA_MAX_RESOLUTION_SECONDS=1800
SLA_MAX_QUEUE_WAIT_SECONDS=300
SLA_ALERT_TELEGRAM_ENABLED=false
